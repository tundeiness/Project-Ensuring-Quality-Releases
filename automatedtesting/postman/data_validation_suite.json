{
  "info": {
    "_postman_id": "data-validation-suite-id",
    "name": "Data Validation Suite",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Employee - Data Validation",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Response contains success\", function () {",
              "    pm.expect(pm.response.text()).to.include(\"success\");",
              "});",
              "var json = pm.response.json();",
              "pm.test(\"Has ID in response\", function () {",
              "    pm.expect(json.data).to.have.property(\"id\");",
              "});",
              "pm.environment.set(\"id\", json.data.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"{{name}}\",\n    \"salary\": \"{{salary}}\",\n    \"age\": \"{{age}}\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://dummy.restapiexample.com/api/v1/create",
          "protocol": "http",
          "host": ["dummy", "restapiexample", "com"],
          "path": ["api", "v1", "create"]
        }
      },
      "response": []
    },
    {
      "name": "Get All Employees - Data Validation",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.test(\"Response contains success\", function () {",
              "    pm.expect(json.status).to.eql(\"success\");",
              "});",
              "pm.test(\"Employees list is not empty\", function () {",
              "    pm.expect(json.data.length).to.be.above(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://dummy.restapiexample.com/api/v1/employees",
          "protocol": "http",
          "host": ["dummy", "restapiexample", "com"],
          "path": ["api", "v1", "employees"]
        }
      },
      "response": []
    }
  ]
}
